<h2>Add Movie to Watchlist</h2>
<form id="watchlist-form">
	<label for="movie-title">Movie Title</label>
	<input type="text" id="movie-title" name="movie-title" placeholder="Enter movie title...">
	
	<label for="movie-year">Year Released</label>
	<input type="text" id="movie-year" name="movie-year" placeholder="Enter year released...">
	
	<label for="movie-genre">Genre</label>
	<select id="movie-genre" name="movie-genre">
		<option value="">Select genre...</option>
		<option value="action">Action</option>
		<option value="comedy">Comedy</option>
		<option value="drama">Drama</option>
		<option value="horror">Horror</option>
	</select>
	
	<input type="submit" value="Add to Watchlist">
</form>

<script>
	function addToWatchlist() {
		alert("Added to watchlist!");
	}
	
	document.getElementById("watchlist-form").addEventListener("submit", function(event) {
		event.preventDefault();
		var title = document.getElementById("movie-title").value;
		var year = document.getElementById("movie-year").value;
		var genre = document.getElementById("movie-genre").value;
		alert("Added " + title + " (" + year + ") to watchlist under the " + genre + " genre.");
	});
</script>
